page {
  background-color: white;
}
.top {
  width: 100%;
  height: 360rpx;
  background: #23EBB9;
  padding-top: 28rpx;
  position: relative;
  font-size: 32rpx;
}

.center {
  width: 95%;
  height: 300rpx;
  background: white;
  display: flex;
  flex-direction: column;
  margin: 0 auto;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 8rpx  rgba(0,0,0,0.1), 4rpx 0 8rpx  rgba(0,0,0,0.1), 0 -4rpx 8rpx  rgba(0,0,0,0.1), -4rpx 0 8rpx  rgba(0,0,0,0.1);

}

.center_top {
  display: flex;
  flex-direction: row;
  width: 80%;
  height: 160rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  border-bottom: 2rpx solid #EEEEEE;
}

.center_img {
  width: 132rpx;
  height: 132rpx;
  border-radius: 50%;
  overflow: hidden;
}

.center_img image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.center_img .user_head {
  width: 100%;
  height: 100%;
}

.center_info {
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
  margin-left: 60rpx;
}

.center_name {
  font-size: 40rpx;
  color: #666666;
}

.center_phone {
  font-size: 28rpx;
  margin-top: 18rpx;
  color: #BEBEBE;
}

.center_down {
  display: flex;
  justify-content: space-around;
  width: 80%;
  height: 70rpx;
  margin: 0 auto;
  margin-top: 20rpx;
}

.center_rank {
  width: 220rpx;
  height: 70rpx;
  display: flex;
  flex-direction: row;
}

.rank_text {
  height: 70rpx;
  line-height: 70rpx;
  margin-left: 10rpx;
  color: #AAAAAA;
}

.center_rank image {
  width: 70rpx;
  height: 70rpx;
}


.gif-wave {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

.wave {
  background:white;
  width:100%;
  height:30rpx;
}

/* --------- cell --------- */
.cells {
  width: 90%;
  background: white;
  margin: 40rpx auto 0;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 8rpx  rgba(0,0,0,0.1), 4rpx 0 8rpx  rgba(0,0,0,0.1), 0 -4rpx 8rpx  rgba(0,0,0,0.1), -4rpx 0 8rpx  rgba(0,0,0,0.1);

}
.active {
  background-color: #ececec;
}
.cells .cell:last-child {
  border: none;
}
.cell {
  padding: 0 40rpx;
  height: 112rpx;
  line-height: 112rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid rgba(0,0,0,0.1);
  border-collapse:collapse;
}

.cell_left {
  position: relative;
}

.cell_left_img {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 52rpx;
  height:52rpx;
}

.cell_left_txt {
  padding-left: 70rpx;
  font-size: 36rpx;
}

.cell_right_txt {
  color: #b2b2b2;
  font-size: 28rpx;
}

.cell_right_txt::after {
  content: " ";
  margin-left: 16rpx;
  display: inline-block;
  height: 16rpx;
  width: 16rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #b2b2b2;
  border-style: solid;
  -webkit-transform: matrix(.71,.71,-.71,.71,0,0);
  transform: matrix(.71,.71,-.71,.71,0,0);
}
